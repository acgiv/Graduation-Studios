<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ElencoTesi">

    <!-- Barra di ricerca -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchTesiView"
        app:queryHint="Cerca Tesi"
        app:iconifiedByDefault="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false">
    </androidx.appcompat.widget.SearchView>

    <!-- Pulsante Filtra -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="">

        <Button
            android:id="@+id/filterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Filtra"
            android:layout_marginStart="2dp"
            android:textColor="@color/color_text_input"
            android:textStyle="bold"
        />

        <ImageView
            android:id="@+id/expandFiltra"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="-11dp"
            android:layout_gravity="center"
            android:contentDescription="forward Icon"
            android:src="@drawable/baseline_keyboard_arrow_down_24" />

    </LinearLayout>

    <!-- Lista di tesi -->
    <ListView
        android:id="@+id/listClassificaTesiView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:layout_marginBottom="?android:attr/actionBarSize" />

    <!-- Include the filtra_tesi layout -->
    <include
        layout="@layout/fragment_popup_filtra_tesi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</LinearLayout>
