<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/infoTesi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:rotation="0"
    tools:context=".ui.card.TesiProfessore.InfoTesiFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardInfoTesi"
        android:layout_width="410dp"
        android:layout_height="500dp"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/linearLayoutTitoloTesi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/titolo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Titolo: "
                        android:textColor="@color/color_primary"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/inserisciTitolo"
                        android:layout_width="313dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        app:layout_constraintEnd_toEndOf="parent" />

                </LinearLayout>

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayoutTitoloTesi"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayoutTitoloTesi" />

                <LinearLayout
                    android:id="@+id/linearLayoutTipologiaTesi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    app:layout_constraintTop_toBottomOf="@id/linearLayoutTitoloTesi">

                    <TextView
                        android:id="@+id/tipologia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipologia: "
                        android:textColor="@color/color_primary"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/inserisciTipologia"
                        android:layout_width="272dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        app:layout_constraintEnd_toEndOf="parent" />

                </LinearLayout>

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayoutTipologiaTesi"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayoutTipologiaTesi" />

                <LinearLayout
                    android:id="@+id/linearLayoutDataPubblicazioneTesi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linearLayoutTipologiaTesi">

                    <TextView
                        android:id="@+id/dataPubblicazione"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data pubblicazione: "
                        android:textColor="@color/color_primary"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/inserisciDataPubblicazione"
                        android:layout_width="162dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </LinearLayout>

                <View
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayoutDataPubblicazioneTesi" />

                <LinearLayout
                    android:id="@+id/linearLayoutCicloCdlTesi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linearLayoutDataPubblicazioneTesi">

                    <TextView
                        android:id="@+id/cicloCdl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ciclo CDL: "
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/color_primary"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/inserisciCicloCdl"
                        android:layout_width="268dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </LinearLayout>

                <View
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayoutCicloCdlTesi" />

                <LinearLayout
                    android:id="@+id/linearLayoutAbstractTesi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linearLayoutCicloCdlTesi">

                    <TextView
                        android:id="@+id/abstractTesi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Abstract: "
                        android:textColor="@color/color_primary"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/inserisciAbstract"
                        android:layout_width="282dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        app:layout_constraintEnd_toEndOf="parent" />

                </LinearLayout>

                <View
                    android:id="@+id/line5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayoutAbstractTesi" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</GridLayout>