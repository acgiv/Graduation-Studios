<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ... Card Lista Tesi ... -->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_lista_tesi"
        android:layout_width="410dp"
        android:layout_height="735dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/griglia_lista_tesi"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Barra di ricerca -->

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:iconifiedByDefault="false"
                android:queryHint="Cerca nomi" />

            <!-- Lista di nomi -->

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:layout_weight="1"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp" />

            <!--Linea grigia che separa le barra di ricerca e le tesi -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="75dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/darker_gray" />

            <!--Icona per eliminare la tesi -->

            <ImageView
                android:id="@+id/icona_elimina_tesi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="80dp"
                android:src="@drawable/baseline_delete_24" />

            <!--Icona per visualizzare la tesi -->

            <ImageView
                android:id="@+id/icona_visualizza_tesi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="340dp"
                android:layout_marginTop="80dp"
                android:src="@drawable/baseline_arrow_forward_ios_24" />

            <!--Campo tesi -->

            <TextView
                android:id="@+id/facolta_info"
                android:layout_width="348dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:text="Tesi 1: "
                android:textColor="@color/color_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!--Linea grigia che separa le tesi -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="110dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/darker_gray" />

            <!--Campo tesi -->

            <TextView
                android:id="@+id/tesi_due"
                android:layout_width="348dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="120dp"
                android:text="Tesi 2: "
                android:textColor="@color/color_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!--Icona per eliminare la tesi -->

            <ImageView
                android:id="@+id/icona_elimina_tesi_due"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="120dp"
                android:src="@drawable/baseline_delete_24" />

            <!--Icona per visualizzare la tesi -->

            <ImageView
                android:id="@+id/icona_visualizza_tesi_due"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="340dp"
                android:layout_marginTop="120dp"
                android:src="@drawable/baseline_arrow_forward_ios_24" />

            <!--Linea grigia che separa le tesi -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="150dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/darker_gray" />

            <!--Icona per aggiungere una tesi -->

            <ImageView
                android:id="@+id/icona_aggiungi_tesi"
                android:layout_width="51dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:src="@drawable/baseline_add_circle_24" />


        </FrameLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>