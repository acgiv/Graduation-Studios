<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TesiProfessore.ListaTesiProfessore"
    android:orientation="horizontal">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/TabLayoutTesi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/Vincoli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vincoli" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/Tesisti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tesisti" />

    </com.google.android.material.tabs.TabLayout>

    <!-- Aggiunta del ViewPager per visualizzare i contenuti dei tab -->

    <androidx.viewpager2.widget.ViewPager2

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewPager"
        android:layout_below="@id/TabLayoutTesi" >

    </androidx.viewpager2.widget.ViewPager2>

</LinearLayout>