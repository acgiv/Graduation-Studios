<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tesiProfessore.ListaTesiProfessore">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/TabLayoutTesi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/Vincoli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vincoli" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/Tesisti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tesisti" />

    </com.google.android.material.tabs.TabLayout>

    <!-- Aggiunta del ViewPager per visualizzare i contenuti dei tab -->

    <androidx.viewpager.widget.ViewPager

        android:id="@+id/viewPagerTesiProfessori"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/TabLayoutTesi" >


    </androidx.viewpager.widget.ViewPager>

</FrameLayout>