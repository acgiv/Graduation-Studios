<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.card.TesiProfessore.ListaTesiTesisti">

    <!-- ... Card Tesisti ... -->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_info"
        android:layout_width="410dp"
        android:layout_height="650dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.493">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <!-- Campo tesista -->

            <TextView
                android:id="@+id/tesita_uno"
                android:layout_width="348dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="Lorusso Danilo "
                android:textColor="@color/color_primary"
                android:textSize="25sp"
                android:textStyle="bold" />

            <!-- Icona elimina tesista -->

            <ImageView
                android:id="@+id/icona_cancella_tesista"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="340dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/baseline_delete_24" />

            <!-- Linea grigia che separa i campi tesisti -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="90dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/darker_gray" />

            <!-- Campo tesista -->

            <TextView
                android:id="@+id/tesista_due"
                android:layout_width="348dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="120dp"
                android:text="Bruno Mario "
                android:textColor="@color/color_primary"
                android:textSize="25sp"
                android:textStyle="bold" />

            <!-- Icona elimina tesista -->

            <ImageView
                android:id="@+id/icona_cancella_tesista_due"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="340dp"
                android:layout_marginTop="122dp"
                android:src="@drawable/baseline_delete_24" />

            <!-- Linea grigia che separa i campi tesisti -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="180dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/darker_gray" />

            <!-- Icona aggiungi tesista -->

            <ImageView
                android:id="@+id/icona_aggiungi_tesista"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="200dp"
                android:src="@drawable/baseline_add_circle_48" />


        </FrameLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>