<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tesiProfessore.ListaTesiVincoli">

    <!-- ... Card Vincoli ... -->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_info"
        android:layout_width="410dp"
        android:layout_height="650dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.493">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <!-- Campo skill -->

            <TextView
                android:id="@+id/skill_tesisti"
                android:layout_width="348dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="Skill "
                android:textColor="@color/color_primary"
                android:textSize="25sp"
                android:textStyle="bold" />

            <!-- Icona modifica skill -->

            <ImageView
                android:id="@+id/icona_modifica_skill"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="340dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/edit_icon" />

            <!-- Linea grigia che separa il campo skill ed esami mancanti -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="90dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/darker_gray" />

            <!-- Campo Esami mancanti -->

            <TextView
                android:id="@+id/esami_mancanti_tesisti"
                android:layout_width="348dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="120dp"
                android:text="Esami mancanti "
                android:textColor="@color/color_primary"
                android:textSize="25sp"
                android:textStyle="bold" />

            <!-- Icona modifica esami mancanti  -->

            <ImageView
                android:id="@+id/icona_modifica_esami_mancanti"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="340dp"
                android:layout_marginTop="122dp"
                android:src="@drawable/edit_icon" />

            <!-- Linea grigia che separa il campo esami mancanti con i bottoni -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="180dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/darker_gray" />

            <!-- Bottone Salva -->

            <Button
                android:id="@+id/button_salva_vincoli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="80dp"
                app:cornerRadius="8dp"
                android:text="Salva" />

            <!-- Bottone Annulla -->

            <Button
                android:id="@+id/button_annulla_vincoli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:text="Annulla"
                app:cornerRadius="8dp" />


        </FrameLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>