<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/red_status_dot"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/red_dot_icon"
            android:contentDescription="Status Dot"
            app:layout_constraintTop_toTopOf="@+id/taskTextView"
            app:layout_constraintEnd_toStartOf="@+id/taskTextView"
            app:layout_constraintBottom_toBottomOf="@+id/taskTextView" />
        <ImageView
            android:id="@+id/orange_status_dot"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/orange_dot_icon"
            android:contentDescription="Status Dot"
            app:layout_constraintTop_toTopOf="@+id/taskTextView"
            app:layout_constraintEnd_toStartOf="@+id/taskTextView"
            app:layout_constraintBottom_toBottomOf="@+id/taskTextView" />
        <ImageView
            android:id="@+id/green_status_dot"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/green_dot_icon"
            android:contentDescription="Status Dot"
            app:layout_constraintTop_toTopOf="@+id/taskTextView"
            app:layout_constraintEnd_toStartOf="@+id/taskTextView"
            app:layout_constraintBottom_toBottomOf="@+id/taskTextView" />

        <TextView
            android:id="@+id/taskTextView"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/delete_task_ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@color/white"
            android:contentDescription="Elimina questa attivitÃ "
            android:descendantFocusability="blocksDescendants"
            android:src="@drawable/baseline_delete_forever_48"
            app:layout_constraintTop_toTopOf="@+id/taskTextView"
            app:layout_constraintBottom_toBottomOf="@+id/taskTextView"
            app:layout_constraintStart_toEndOf="@+id/taskTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>
