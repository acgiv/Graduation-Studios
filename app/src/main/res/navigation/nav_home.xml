<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/fragment_home">

    <!--Fragment della home -->
    <fragment
        android:id="@+id/fragment_home"
        android:name="com.laureapp.ui.home.HomeFragment"
        android:label="Laureapp"
        tools:layout="@layout/fragment_home">

        <!-- Home to social fragment -->
        <action
            android:id="@+id/action_fragment_home_to_social_fragment"
            app:destination="@id/social_fragment" />

        <!-- Home to profilo studente fragment -->
        <action
            android:id="@+id/action_fragment_home_to_profilo"
            app:destination="@id/profilo_studente" />

        <!-- Home to tesi studente fragment -->
        <action
            android:id="@+id/action_fragment_home_to_tesiStudenteFragment"
            app:destination="@id/tesiStudenteFragment" />

        <!-- Home to tesisti fragment -->
        <action
            android:id="@+id/action_fragment_home_to_tesisti"
            app:destination="@id/tesisti" />

        <!-- Home to messaggi fragment -->
        <action
            android:id="@+id/action_fragment_home_to_messaggiFragment"
            app:destination="@id/messaggiFragment" />

    </fragment>


    <!--Fragment dei social -->
    <fragment
        android:id="@+id/social_fragment"
        android:name="com.laureapp.ui.home.SocialFragment"
        android:label="Social"
        tools:layout="@layout/fragment_social">
    </fragment>

    <!--Fragment profilo studente -->
    <fragment
        android:id="@+id/profilo_studente"
        android:name="com.laureapp.ui.profilo.ProfiloFragment"
        android:label="Profilo"
        tools:layout="@layout/fragment_profilo">
    </fragment>

    <!--Fragment tesi studente -->
    <fragment
        android:id="@+id/tesiStudenteFragment"
        android:name="com.laureapp.ui.card.TesiStudente.TesiStudenteFragment"
        android:label="Tesi"
        tools:layout="@layout/fragment_tesi_studente" >
    </fragment>

    <!--Fragment tesisti -->
    <fragment
        android:id="@+id/tesisti"
        android:name="com.laureapp.ui.card.Task.TesistiFragment"
        android:label="Tesisti"
        tools:layout="@layout/fragment_tesisti">
        <!-- Tesisti to dettagli tesista fragment -->
        <action
            android:id="@+id/action_fragment_tesisti_to_dettagli_tesista"
            app:destination="@id/dettagli_tesista" />
    </fragment>

    <!--Fragment dettagli tesista -->
    <fragment
        android:id="@+id/dettagli_tesista"
        android:name="com.laureapp.ui.card.Task.DettagliTesistaFragment"
        android:label="Tesista"
        tools:layout="@layout/fragment_dettagli_tesista">
        <action
            android:id="@+id/action_dettagli_tesista_to_task"
            app:destination="@id/taskFragment" />

        <!--TODO: CANCELLARE DOPO AVER AGGIORNATO IL DATABASE -->
        <action
            android:id="@+id/action_dettagli_tesista_to_dettagli_task"
            app:destination="@id/dettagliTaskFragment" />
    </fragment>

    <!--Fragment messaggi -->
    <fragment
        android:id="@+id/messaggiFragment"
        android:name="com.laureapp.ui.home.MessaggiFragment"
        android:label="Messaggi"
        tools:layout="@layout/fragment_messaggi">
        <action
            android:id="@+id/action_messaggiFragment_to_discussioneFragment"
            app:destination="@id/discussioneFragment" />
        <action
            android:id="@+id/action_messaggiFragment_to_fragment_home"
            app:destination="@id/fragment_home" />
    </fragment>

    <!--Fragment discussione -->
    <fragment
        android:id="@+id/discussioneFragment"
        android:name="com.laureapp.ui.home.DiscussioneFragment"
        android:label="Discussione"
        tools:layout="@layout/fragment_discussione">
        <action
            android:id="@+id/action_discussioneFragment_to_messaggiFragment"
            app:destination="@id/messaggiFragment" />
    </fragment>

    <!--Fragment task -->
    <fragment
        android:id="@+id/taskFragment"
        android:name="com.laureapp.ui.card.Task.TaskTesiFragment"
        android:label="Task"
        tools:layout="@layout/fragment_task">
        <action
            android:id="@+id/action_task_to_dettagli_task"
            app:destination="@id/dettagliTaskFragment" />
    </fragment>

    <!--Fragment dettagli task -->
    <fragment
        android:id="@+id/dettagliTaskFragment"
        android:name="com.laureapp.ui.card.Task.DettagliTaskFragment"
        android:label="Dettagli Task"
        tools:layout="@layout/fragment_dettagli_task">
        <action
            android:id="@+id/action_dettagli_task_to_ricevimenti_fragment"
            app:destination="@id/ricevimentiTaskFragment" />
    </fragment>

    <!--Fragment ricevimenti associati alle task -->
    <fragment
        android:id="@+id/ricevimentiTaskFragment"
        android:name="com.laureapp.ui.card.Task.RicevimentiFragment"
        android:label="Ricevimenti task"
        tools:layout="@layout/fragment_ricevimenti">
    </fragment>

    <!-- Fragment lista tesi professore -->

</navigation>